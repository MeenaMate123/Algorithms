#include <vector>
#include <iostream>
#include <set>
#include <list>
#include <climits>
using namespace std;

class Edge
{
    public:
    int dest, weight;
    Edge(int x,int y)
    {
        dest=x;
        weight=y;
    }
};

int main()
{
    int num_of_v, num_of_e, vr;
    cin >> num_of_v >> num_of_e;
    vector<list<Edge> > adj_list(num_of_v);
    bool visited[num_of_v];
    for(int i=0;i<num_of_v;i++)
        visited[i]=false;
    set<pair<int, int> > T;
    set<int> A;
    vector<Edge> mst;
    vector<int> min_cost(num_of_v,INT_MAX);
    for (int i = 0; i < num_of_e; ++i)
    {
        int x,y,w;
        cin >> x >> y >> w;
        adj_list[x].push_back(Edge{y, w});
        adj_list[y].push_back(Edge{x, w});
    }
    cin >> vr;
    min_cost[vr] = 0;
    T.insert(make_pair(0,vr));
    visited[vr]=true;
    long mst_cost = 0;
    while (!T.empty())
    {
        int temp = T.begin()->second;
        mst_cost += min_cost[temp];
        A.insert(temp);
        visited[temp]=true;
        T.erase(T.begin());
        list<Edge> li=adj_list[temp];
        for (list<Edge>::iterator i=li.begin();i!=li.end();i++)
        {
            if (A.count(i->dest) == 1)
                continue;
            int v=i->dest;
            int weight = i->weight;
            if (min_cost[v]>min_cost[temp]+weight)
            {
                if(min_cost[v]!=INT_MAX)
                    T.erase(T.find(make_pair(min_cost[v], v)));
                min_cost[v]=min_cost[temp]+weight;
                T.insert(make_pair(min_cost[v], v));
            }
        }
        /*if(T.empty())
        {
            for (int i=0; i<num_of_v; i++)
                if (visited[i] == false)
                {
                    min_cost[i]=0;
                    T.insert(make_pair(min_cost[i],i));
                }
        }*/
    }
    for (int i = 0; i <num_of_v; ++i)
    cout << min_cost[i];
    return 0;
}

